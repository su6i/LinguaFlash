{
    "manifest_version": 3,
    "name": "LinguaFlash - آموزش زبان صوتی",
    "version": "1.0.3",
    "description": "آموزش کلمات زبان با تلفظ خودکار بر اساس سطح‌بندی اروپایی",
    "icons": {
        "128": "logo-128.png",
        "48": "logo-48.png",
        "16": "logo-16.png"
    },
    "permissions": [
        "storage",
        "alarms",
        "tts",
        "notifications",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "logo-128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}